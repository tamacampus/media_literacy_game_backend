{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "media-literacy-game-backend",
  "main": "src/index.ts",
  "compatibility_date": "2025-09-10",
  // "compatibility_flags": [
  //   "nodejs_compat"
  // ],
  // "vars": {
  //   "MY_VAR": "my-variable"
  // },
  // "kv_namespaces": [
  //   {
